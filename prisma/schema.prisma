model Seller{
  id Int @id @default(autoincrement())
  name String @db.VarChar(30)
  email String @unique 
  gstNumber String?
  phoneNumber String @db.VarChar(10)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products Product[]
}


enum Role{
  USER
  SELLER
  ADMIN
}

model User{ 
  id Int @id @default(autoincrement())
  name String
  phoneNumber String
  email String @unique
  password String
  role Role @default(USER)
}

